{
  "name": "one-scriba",
  "version": "1.0.0",
  "description": "Desktop app for creative writing and storytelling.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": ["writing", "screenplay", "book", "theatre"],
  "author": "Tommaso",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "fountain-js": "^1.2.4",
    "fs-extra": "^11.3.1",
    "pdfkit": "^0.17.1"
  },
  "build": {
    "productName": "One Scriba",
    "appId": "com.onescriba.desktop",
    "directories": {
      "output": "dist"
    },

    "artifactName": "OneScriba-${version}-${os}.${ext}",
    "asar": true,

    "files": [
      "src/**/*",
      "package.json"
    ],

    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ],

    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icons/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null,
      "artifactName": "OneScriba-macOS.${ext}"
    },

    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico",
      "artifactName": "OneScriba-Setup.${ext}"
    },

    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    },

    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
